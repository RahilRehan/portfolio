<%- include('./partials/portfolio') %>

<!-- Form to create a new blog -->
<form method="post" action="/blog/newblog" class="column is-7-tablet blog">
    <h1 class="is-size-1 m-6 has-text-centered">Create a New Blog</h1>
    <div class="field">
        <label class="label">Title</label>
        <div class="control">
            <input class="input" type="text" name="blog[title]" placeholder="Title of blog">
        </div>
    </div>

    <div class="field">
        <label class="label">Image link</label>
        <div class="control">
            <input class="input" type="text" name="blog[image]" placeholder="Image url">
        </div>
    </div>

    <div class="field">
        <label class="label">Body</label>
        <div class="control">
            <textarea class="textarea" name="blog[body]" placeholder="Blog Body"></textarea>
        </div>
    </div>


    <div class="field is-grouped">
        <div class="control">
            <button class="button is-link">Submit</button>
        </div>
    </div>
</form>

